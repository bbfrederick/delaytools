#!/bin/csh -f

rapidtide2 \
	fmri.nii.gz \
	../dst/dgsr_2 \
        --limitoutput \
        -s 25.0 \
        -L \
	-r -20,20 \
	-f 2 \
        --refinepasses=3 \
        --despecklepasses=4 \
        --accheck \
        --nprocs=-1 \
        --detrendorder=3

#rapidtide2x \
