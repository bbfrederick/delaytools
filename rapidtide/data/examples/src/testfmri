#!/bin/bash

rapidtide \
	fmri.nii.gz \
	../dst/dgsr_standardnames \
	--spatialfilt 2 \
        --nprocs -1 \
        --passes 3 

rapidtide \
	fmri.nii.gz \
	../dst/dgsr_bids \
	--spatialfilt 2 \
        --nprocs -1 \
        --passes 3 \
        --bidsoutput

rapidtide \
	fmri.nii.gz \
	../dst/dgsr_butterworth_onepass \
	--spatialfilt 2 \
        --filtertype butterworth \
        --nprocs -1 \
        --passes 1

diffmaps ../dst/dgsr_butterworth_onepass_bipolar ../dst/dgsr_butterworth_onepass ../dst/diff_bipvsnorm

