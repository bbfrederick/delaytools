	#../dst/dgsr_2x \
        #--limitoutput \
        #-s 25.0 \
        #-L \
	#-r -20,20 \
	#-f 2 \
        #--passes=3 \
        #--refineoffset \
        #--despecklepasses=4 \
        #--nprocs=-1 \
        #--saveoptionsasjson \
        #--pickleft \
        #--nofitfilt \
        #--detrendorder=3

rapidtideX \
	fmri_demeaned.nii.gz \
	../dst/dgsr_X \
        --limitoutput \
        --sigmalimit 25.0 \
        --numreps 0 \
        --filterband lfo \
	--searchrange -20 20 \
	--gaussigma 2 \
        --passes 3 \
        --despecklepasses 4 \
        --nprocs -1 \
        --saveoptionsasjson \
        --pickleft \
        --nofitfilt \
        --detrendorder=3

