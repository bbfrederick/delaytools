rapidtide \
	fmri.nii.gz \
	../dst/dgsr_hybrid_fastquad_singlechild \
        --filterband lfo \
	--passes 3 \
	--despecklepasses 4 \
	--searchrange -10 15 \
	--sigmalimit 25.0 \
	--nprocs 1 \
	--alwaysmultiproc \
	--pickleft \
	--pickleftthresh 0.3 \
	--peakfittype fastquad \
	--spatialfilt 2 \
	--similaritymetric hybrid \
        --detrendorder 3 \
        --noglm \
        --numnull 0 \
	--ampthresh 0.1

diffmaps ../dst/dgsr_hybrid_fastquad_singleproc ../dst/dgsr_hybrid_fastquad_singlechild ../dst/diff_childvssingle
#diffmaps ../dst/dgsr_gauss ../dst/dgsr_fastgauss ../dst/diff_gauss_fastgauss
#diffmaps ../dst/dgsr_quad ../dst/dgsr_fastquad ../dst/diff_quad_fastquad
